<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GuevaraGCreacionAppApuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GuevaraGCreacionAppApuntes"
    xmlns:views="clr-namespace:GuevaraGCreacionAppApuntes.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="App apuntes by galeyro">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about.png', MacCatalyst='icon_about.png'}" />
    </TabBar>

</Shell>
